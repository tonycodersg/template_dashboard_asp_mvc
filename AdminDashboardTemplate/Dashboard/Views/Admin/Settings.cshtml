@{
    ViewData["Title"] = "Settings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Breadcrumb -->
    <div class="row page-titles">
        <div class="col-md-5 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Settings</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin">Home</a></li>
                <li class="breadcrumb-item active">Settings</li>
            </ol>
        </div>
    </div>

    <!-- Settings Form -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">General Settings</h4>
                    <form>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Site Name</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" placeholder="Enter site name" value="Admin Dashboard">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Site Description</label>
                            <div class="col-md-9">
                                <textarea class="form-control" rows="3" placeholder="Enter site description">A powerful admin dashboard template</textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Email Notifications</label>
                            <div class="col-md-9">
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input" id="emailNotif" checked>
                                    <label class="custom-control-label" for="emailNotif">Enable email notifications</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 col-form-label">Maintenance Mode</label>
                            <div class="col-md-9">
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input" id="maintenanceMode">
                                    <label class="custom-control-label" for="maintenanceMode">Enable maintenance mode</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-9 offset-md-3">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                <button type="button" class="btn btn-secondary">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

